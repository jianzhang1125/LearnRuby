	<h1>Events List</h1>
	
	<table class="table">
	    <% @events.each do |e| %>
	        <tr>
	            <td> <%= e.name %> </td>

	            <!--This is the not RESTful
	            <td> <%= link_to "Show", controller:"events", action:"show", id:e %> </td>
	            <td> <%= link_to "Edit", controller:"events", action:"edit", id:e %> </td>
	            <td> <%= link_to "Delete", controller:"events", action:"destroy", id:e %> </td>
	            -->

                <td> <%= link_to "Show", event_path(e), :class => "btn btn-primary" %> </td>
                <td> <%= link_to "Get XML", event_path(e, :format => :xml), :class => "btn btn-default" %> </td>
                <td> <%= link_to "Get JSON", event_path(e, :format => :json), :class => "btn btn-default" %> </td>
                <td> <%= link_to "Edit", edit_event_path(e), :class => "btn btn-default" %> </td>
                <td> <%= link_to "Delete", event_path(e), :class => "btn btn-danger", :method => :delete %> </td>
	        </tr>
	    <% end %>
	</table>
    <%= paginate @events %>

	<!--This is the not RESTful
	<%= link_to "Add New Event", controller:"events", action:"new" %>
	-->
	<%= link_to "Add New Event", new_event_path %>


