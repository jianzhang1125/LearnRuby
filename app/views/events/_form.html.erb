<div class="form-group">
    <%=f.label :category_id,"Category"%>
    <%=f.collection_select(:category_id, Category.all, :id, :name, :class => "form-control", :include_blank => 'Select Category')  %>
</div>

<div class="form-group">
    <% Category.all.each do |c| %>
        <%= f.radio_button :category_id, c.id %> <%= c.name %>
    <% end %>
</div>